 <div class="<%= weather_card_class(@presenter.weather_status) %>">
    <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">5-Day Forecast</h3>

    <div class="space-y-6">
        <% if @presenter.forecast_days.any? %>
            <% @presenter.forecast_days.each do |day| %>
                <div class="bg-white/50 rounded-lg p-6 min-h-[80px] flex items-center">
                    <div class="flex items-center justify-between w-full">
                        <div class="flex items-center">
                            <div class="text-center w-32">
                                <div class="text-sm font-semibold text-gray-700 whitespace-nowrap"><%= format_date(day[:date]) %></div>
                            </div>
                            
                            <div class="flex items-center space-x-3">
                                <div class="text-center w-12 ml-4">
                                    <%= weather_icon(day[:description]).html_safe %>
                                </div>
                                <div>
                                    <div class="text-sm font-semibold text-gray-800"><%= day[:description] %></div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="text-right">
                            <div class="flex items-center space-x-2">
                                <div class="text-red-600 font-bold text-lg"><%= format_temperature(day[:high], temperature_unit) %>°</div>
                                <div class="text-blue-600 font-bold text-lg"><%= format_temperature(day[:low], temperature_unit) %>°</div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% else %>
            <!-- No Forecast Data -->
            <div class="bg-white/50 rounded-lg p-6 text-center">
                <div class="text-gray-600">Forecast data not available</div>
            </div>
        <% end %>
    </div>
</div>
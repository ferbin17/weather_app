<div class="min-h-screen bg-gradient-to-br from-blue-400 via-blue-500 to-purple-600 flex items-center justify-center">
  <div class="w-full px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-white mb-2">Weather App</h1>
      <p class="text-blue-100">Get real-time weather information for any location</p>
    </div>

    <% if @presenter.weather_status == "error" %>
      <!-- Error Message -->
      <div class="max-w-md mx-auto mb-8">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <strong class="font-bold">Error:</strong>
          <span class="block sm:inline"><%= @presenter.error_message %></span>
        </div>
      </div>
    <% end %>

    <% if @presenter.weather_data? %>
      <!-- Weather Display - Side by Side -->
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- Left Side - Current Weather -->
          <div class="<%= weather_card_class(@presenter.weather_status) %>">
            <div class="text-center mb-6">
              <h2 class="text-3xl font-bold text-gray-800 mb-2"><%= location_name(@presenter.location) %></h2>
              <p class="text-gray-600">Current Weather</p>
            </div>

            <div class="text-center">
              <div class="mb-4">
                <svg class="w-24 h-24 mx-auto text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zM4.929 4.929a1 1 0 011.414 0l.707.707A1 1 0 11 5.636 7.05l-.707-.707a1 1 0 010-1.414zm14.142 0a1 1 0 010 1.414l-.707.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM7 12a5 5 0 1110 0 5 5 0 01-10 0zM12 16a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM3 12a1 1 0 011-1h1a1 1 0 110 2H4a1 1 0 01-1-1zm16 0a1 1 0 011-1h1a1 1 0 110 2h-1a1 1 0 01-1-1z"/>
                </svg>
              </div>
              <div class="text-6xl font-bold <%= temperature_class(@presenter.current_temperature) %> mb-2"><%= format_temperature(@presenter.current_temperature, temperature_unit) %></div>
              <div class="text-xl text-gray-600 mb-2"><%= @presenter.current_description %></div>
              <div class="text-sm text-gray-500 mb-4">Feels like <%= format_temperature(@presenter.feels_like, temperature_unit) %></div>
              
              <!-- High/Low Temperatures -->
              <div class="flex justify-center space-x-4 text-sm mb-6">
                <div class="text-red-600">
                  <span class="font-semibold">High:</span> <%= format_temperature(@presenter.high_temperature, temperature_unit) %>
                </div>
                <div class="text-blue-600">
                  <span class="font-semibold">Low:</span> <%= format_temperature(@presenter.low_temperature, temperature_unit) %>
                </div>
              </div>

              <!-- Weather Details -->
              <div class="space-y-3">
                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-blue-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                    <span class="text-gray-700">Humidity</span>
                  </div>
                  <span class="font-semibold text-gray-800"><%= @presenter.humidity %></span>
                </div>

                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                    <span class="text-gray-700">Wind Speed</span>
                  </div>
                  <span class="font-semibold text-gray-800"><%= @presenter.wind_speed %></span>
                </div>

                <div class="flex justify-between items-center py-2 border-b border-gray-200">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-purple-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                    <span class="text-gray-700">Pressure</span>
                  </div>
                  <span class="font-semibold text-gray-800"><%= @presenter.pressure %></span>
                </div>

                <div class="flex justify-between items-center py-2">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-orange-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                    <span class="text-gray-700">Visibility</span>
                  </div>
                  <span class="font-semibold text-gray-800"><%= @presenter.visibility %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Side - Forecast -->
          <div class="<%= weather_card_class(@presenter.weather_status) %>">
            <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">5-Day Forecast</h3>
            
            <div class="space-y-4">
              <% if @presenter.forecast_days.any? %>
                <% @presenter.forecast_days.each do |day| %>
                  <div class="bg-white/50 rounded-lg p-4">
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-4">
                        <div class="text-center">
                          <div class="text-sm font-semibold text-gray-700"><%= format_date(day[:date]) %></div>
                        </div>
                        
                        <div class="flex items-center space-x-3">
                          <div class="text-center">
                            <svg class="w-8 h-8 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M12 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zM4.929 4.929a1 1 0 011.414 0l.707.707A1 1 0 11 5.636 7.05l-.707-.707a1 1 0 010-1.414zm14.142 0a1 1 0 010 1.414l-.707.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM7 12a5 5 0 1110 0 5 5 0 01-10 0zM12 16a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM3 12a1 1 0 011-1h1a1 1 0 110 2H4a1 1 0 01-1-1zm16 0a1 1 0 011-1h1a1 1 0 110 2h-1a1 1 0 01-1-1z"/>
                            </svg>
                          </div>
                          <div>
                            <div class="text-sm font-semibold text-gray-800"><%= day[:description] %></div>
                          </div>
                        </div>
                      </div>
                      
                      <div class="text-right">
                        <div class="flex items-center space-x-2">
                          <div class="text-red-600 font-bold text-lg"><%= format_temperature(day[:high], temperature_unit) %>¬∞</div>
                          <div class="text-blue-600 font-bold text-lg"><%= format_temperature(day[:low], temperature_unit) %>¬∞</div>
                        </div>
                        <div class="text-xs text-gray-500 mt-1">Forecast</div>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <!-- No Forecast Data -->
                <div class="bg-white/50 rounded-lg p-4 text-center">
                  <div class="text-gray-600">Forecast data not available</div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <!-- No Data State -->
      <div class="max-w-md mx-auto">
        <div class="bg-white/90 backdrop-blur-sm rounded-lg shadow-lg p-8 text-center">
          <div class="text-6xl mb-4">üå§Ô∏è</div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">No Weather Data</h3>
          <p class="text-gray-600">Weather information will appear here when available.</p>
        </div>
      </div>
    <% end %>

    <!-- Footer -->
    <div class="text-center mt-8">
      <p class="text-blue-100 text-sm">
        Powered by OpenWeather API ‚Ä¢ Built with Rails
      </p>
    </div>
  </div>
</div>

<div class="min-h-screen bg-gradient-to-br from-blue-400 via-blue-500 to-purple-600 flex items-center justify-center" data-controller="weather--index">
  <div class="w-full px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-white mb-2">Weather App</h1>
      <p class="text-blue-100">Get real-time weather information for any location</p>
    </div>

    <% if @presenter.weather_status == "error" %>
      <!-- Error Message -->
      <%= render partial: "error_message", locals: { presenter: @presenter } %>
    <% end %>

    <div id="weather-content-container" data-weather--index-target="weatherDetails">
      <%= render partial: "weather_details", locals: { presenter: @presenter } %>
    </div>

    <!-- Footer -->
    <div class="text-center mt-8">
      <p class="text-blue-100 text-sm">
        Powered by OpenWeather API â€¢ Built with Rails
      </p>
    </div>
  </div>
</div>

<label class="flex justify-center items-center cursor-pointer">
    <span class="mr-2 text-blue-800 font-semibold">°C</span>
    <input type="checkbox"
            class="sr-only peer"
            data-action="change->weather--index#toggleUnit"
            <%= 'checked' if temperature_unit == 'fahrenheit' %>>
    <div class="w-11 h-6 bg-blue-200 rounded-full peer peer-checked:bg-blue-500 transition-colors relative">
    <div class="absolute left-1 top-1 bg-white w-4 h-4 rounded-full shadow transition-transform peer-checked:translate-x-5"></div>
    </div>
    <span class="ml-2 text-blue-800 font-semibold">°F</span>
</label>